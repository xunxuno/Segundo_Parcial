        .center-text
            h1 Historial de #{user}
            // Itera sobre cada registro del historial
            each registro in datosHistorial
                .historial-item
                    p Fecha de operaci√≥n: #{new Date(registro.fecha_operacion).toLocaleString()}
                    p Nueva palabra: #{registro.nueva_palabra}
